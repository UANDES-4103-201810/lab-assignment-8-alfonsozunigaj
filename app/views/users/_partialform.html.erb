<table class="table">
  <thead>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Username</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.username %></td>
      <td><%= link_to 'Show', user, class: "btn btn-link" %></td>
      <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-link" %></td>
      <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-link" %></td>
      <td><%= link_to 'Products', '#', class: "btn btn-link", id: "my_products", :onclick => 'name_of_function(); return false;', user: user.id %></td>
    </tr>
  <% end %>
  </tbody>
</table>


